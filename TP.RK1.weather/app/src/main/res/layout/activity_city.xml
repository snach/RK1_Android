<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vice_city"
        android:id="@+id/btn_viceCity"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_RaccoonCity"
        android:layout_gravity="center_horizontal"
        android:text="Raccoon_city" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="springfield"
        android:id="@+id/btn_springfield"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="silent_hill"
        android:id="@+id/btn_silentHill"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="South_park"
        android:id="@+id/btn_southPark"
        android:layout_gravity="center_horizontal" />
</LinearLayout>